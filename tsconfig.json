{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "ES2015",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "RxFM.createElement"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.*"]
}
